<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/myPageFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_mypage_profile"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/solid_img"
        android:scaleType="fitXY"
        android:src="@drawable/yeonjeen"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/conersize40"
        tools:ignore="MissingClass" />

    <TextView
        android:id="@+id/tv_mypage_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/iv_mypage_profile"
        app:layout_constraintTop_toTopOf="@id/iv_mypage_profile" />

    <TextView
        android:id="@+id/tv_mypage_selfcription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:text="@string/tv_mypage_selfcription"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@id/iv_mypage_profile"
        app:layout_constraintTop_toBottomOf="@id/tv_mypage_nickname" />

    <TextView
        android:id="@+id/tv_mypage_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/tv_id"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/iv_mypage_profile"
        app:layout_constraintTop_toBottomOf="@id/iv_mypage_profile" />

    <TextView
        android:id="@+id/tv_mypage_editid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_mypage_id"
        app:layout_constraintTop_toBottomOf="@id/tv_mypage_id" />

    <TextView
        android:id="@+id/tv_mypage_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/tv_adress"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_mypage_editid"
        app:layout_constraintTop_toBottomOf="@id/tv_mypage_editid" />

    <TextView
        android:id="@+id/tv_mypage_editadress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_mypage_adress"
        app:layout_constraintTop_toBottomOf="@id/tv_mypage_adress" />

    <TextView
        android:id="@+id/tv_mypage_mbti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/mbti"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_mypage_editadress"
        app:layout_constraintTop_toBottomOf="@id/tv_mypage_editadress" />

    <Spinner
        android:id="@+id/sp_mypage_mbti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_mypage_mbti"
        app:layout_constraintTop_toBottomOf="@id/tv_mypage_mbti"/>

    <TextView
        android:id="@+id/tv_mypage_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/birthday"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toEndOf="@id/tv_mypage_mbti"
        app:layout_constraintTop_toTopOf="@id/tv_mypage_mbti"/>

    <TextView
        android:id="@+id/tv_mypage_pickdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_birthday"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_mypage_date"
        app:layout_constraintStart_toStartOf="@id/tv_mypage_date"/>

    <Button
        android:id="@+id/btn_mypage_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@id/tv_mypage_pickdate"
        app:layout_constraintTop_toBottomOf="@id/tv_mypage_date" />


</androidx.constraintlayout.widget.ConstraintLayout>